<div class="box" id="<%= dom_id(step) %>">
  <article class="media" style="align-items: center;">
    <div class="media-content">
      <div class="content">
        <div class="level" style="align-items: baseline;">
          <div class="level-left">
            <p class="is-size-4">
              <strong><%= step.title %></strong>
            </p>
          </div>
          <div class="level-right">
            <div class="is-flex">
              <div style="margin: 10px">
                <%= link_to edit_routine_step_path(routine, step), class: "level-item", "aria-label": "edit" do %>
                  <span class="icon is-small">
                    <i class="fas fa-edit" aria-hidden="true"></i>
                  </span>
                <% end %>
              </div>
              <div style="margin: 10px">
                <%= link_to routine_step_path(routine, step), method: :delete, class: "level-item", "aria-label": "delete", data: { confirm: "Are you sure you want to remove #{step.title} from Steps? "} do %>
                  <span class="icon is-small">
                    <i class="fas fa-trash" aria-hidden="true"></i>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</div>
