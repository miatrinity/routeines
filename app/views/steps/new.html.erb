<section class="section">
  <div class="columns">
    <div class="column">
      <nav class="breadcrumb">
        <ul>
          <li>
            <%= link_to "Your Routines", routines_path %>
          </li>
          <li>
            <%= link_to "Steps of #{@routine.title}", routine_steps_path(@routine) %>
          </li>
          <li class="is-active">
            <%= link_to "New Step", new_routine_step_path(@routine) %>
          </li>
        </ul>
      </nav>

      <div class="column is-8-tablet is-6-desktop is-6-widescreen">
        <%= render 'form', routine: @routine, step: @step %>
      </div>
    </div>
  </div>
</section>
